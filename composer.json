{
	"name": "shredio/type-schema-compiler",
	"type": "library",
	"license": "MIT",
	"require": {
		"php": ">=8.3",
		"phpstan/phpdoc-parser": "^2.3",
		"nette/utils": "^4.0",
		"nette/php-generator": "^4.2",
		"shredio/type-schema": "^0.9.0"
	},
	"autoload": {
		"psr-4": {
			"Shredio\\TypeSchemaCompiler\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --memory-limit=-1",
		"test": "vendor/bin/phpunit tests"
	},
	"bin": ["type-schema-compile"],
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.3"
	}
}
